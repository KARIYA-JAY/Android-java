        />

    <!-- Email Field -->
    <EditText
        android:id="@+id/curr_back"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="currnt back"
        android:textColorHint="#B0BEC5"
        android:background="@drawable/edittext_bg"
        android:padding="10dp"
        android:textColor="#FFFFFF"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="16dp"
        />

    <EditText
        android:id="@+id/tot_back"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="total back"
        android:textColorHint="#B0BEC5"
        android:background="@drawable/edittext_bg"
        android:padding="10dp"
        android:textColor="#FFFFFF"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="16dp"
        />
    <EditText
        android:id="@+id/clr_back"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="cleared back"
        android:textColorHint="#B0BEC5"
        android:background="@drawable/edittext_bg"
        android:padding="10dp"
        android:textColor="#FFFFFF"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="16dp"
        />

    <EditText
        android:id="@+id/all_cpi"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="CPI"
        android:textColorHint="#B0BEC5"
        android:background="@drawable/edittext_bg"
        android:padding="10dp"
        android:textColor="#FFFFFF"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="16dp"
        />
        <Button
            android:id="@+id/final_submit"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Submit"
            android:backgroundTint="#3F6B3E"
            android:textColor="#FFFFFF"
            android:layout_marginTop="24dp"
            android:layout_marginHorizontal="16dp"
            />
    <ImageView
        android:layout_marginTop="75dp"
        android:layout_gravity="center"
        android:id="@+id/image"
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_marginBottom="75dp"
        android:src="@drawable/logo" />
</LinearLayout>
